<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemePers" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="AppThemePers.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppThemePers.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">#33e48c</item>
        <item name="colorControlNormal">#350101</item>
    </style>

    <style name="CardViewStyle" parent="CardView.Light">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>
