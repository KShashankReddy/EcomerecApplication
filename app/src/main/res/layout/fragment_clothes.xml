<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shashankreddy.ecomerecapplicationassignment.ClothesFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subFragmentClothesCarView"
        android:elevation="40dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:id="@+id/subCatageroyClothesImage"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/subCatageroyClothesImage"
                android:id="@+id/subCatageryClothesTitle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/subCatageryClothesTitle"
                android:layout_toEndOf="@id/subCatageroyClothesImage"
                android:id="@+id/subCatageryClothesDesc"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
