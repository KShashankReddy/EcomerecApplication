<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    app:cardUseCompatPadding="true"
    android:background="?android:windowBackground"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingLeft="16dp"
            android:id="@+id/top_seller_imageView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:id="@+id/top_seller_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_seller_title"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/top_seller_desc"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_seller_desc"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:stepSize="0.5"
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/top_seller_rating"/>
    </RelativeLayout>



</android.support.v7.widget.CardView>