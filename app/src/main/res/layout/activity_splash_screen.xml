<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppThemePers"
    android:background="@color/window_background"
    android:id="@+id/splashScreen"
    tools:context="com.example.shashankreddy.ecomerecapplicationassignment.SplashScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/appName"
        android:textColor="#76f73a"
        android:text="Online Bazzar"
        android:typeface="serif"
        android:textSize="40sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appName"
        android:textColor="#fc500c"
        android:id="@+id/appDesc"
        android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Think Smart - Shop Stuff"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/appDesc"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_image"
        android:id="@+id/appImage"/>
    <ProgressBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/splashProgress"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appImage"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_home_footer">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
